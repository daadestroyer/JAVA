<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
	
<hibernate-configuration>
	<session-factory>
		<property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/javalab</property>
		<property name="connection.username">root</property>
		<property name="connection.password">income@tax1998</property>
		
		<property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>
		<property name="hbm2ddl.auto">update</property> <!-- to create table automatically -->
		<property name="show_sql">false</property> <!-- to show the query fired by hibernate -->
		
		<mapping class="com.rvce.prog3_practice.Student"/>
	</session-factory>
</hibernate-configuration>